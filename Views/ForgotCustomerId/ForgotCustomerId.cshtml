
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <script src="~/scripts/ForgotCustomerId.js"></script>
    <link href="~/Content/reset.css" rel="stylesheet" />
    <script src="http://code.jquery.com/jquery-2.2.4.min.js"
            integrity="sha256-BbhdlvQf/xTY9gja0Dq3HiwQF8LaCRTXxZKRutelT44="
            crossorigin="anonymous"></script>
    <link href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css" rel="stylesheet" />
    <script src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <title>Forgot CustomerId</title>
</head>
<body class="container-fluid" style="background-color:#f2f2f2; min-width:335px">
    <div class="col-md-12" id="main">
        <div class="col-md-12">
            <nav class="navbar navbar-inverse navbar-fixed-top">
                <div class="container-fluid">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        <a class="navbar-brand" href="#">The People's Bank</a>
                    </div>
                    <div class="collapse navbar-collapse" align="center" id="myNavbar">
                        <ul class="nav navbar-nav navlist">
                            <li><a href="/Homepage/Index">&nbsp;&nbsp;&nbsp;&nbsp;Home&nbsp;&nbsp;&nbsp;&nbsp;</a></li>
                            <li>
                                <a href="/Homepage/Instruction">&nbsp;&nbsp;&nbsp;&nbsp;Instructions&nbsp;&nbsp;&nbsp;&nbsp;</a>

                            </li>
                            

                        </ul>
                       
                    </div>
                </div>
            </nav>
        </div>
        <div class="row page-header col-md-12" style="margin-top:80px">
            <div class="col-md-3 img-responsive" align="center"><a href="Index"><img style="opacity:0.7; width:40%; height:auto;" src="~/Images/PeopleBank.jpg" /></a></div>
            <div class="col-md-6" align="center"><div class="col-md-12"><h5 style="font-family:'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif; width:100%; font-size:4vw;">The People's Bank</h5></div></div>
            <div class="col-md-3"></div>
        </div>
        <div class="col-md-12">
            <div class="col-md-3"></div>
            <div class="col-md-6" align="center">
                <br /><br />
                <div class="panel panel-primary" align="center">
                    <div class="col-md-12 panel-heading">
                        Forgot your customer ID?
                    </div>
                    <div class="panel-body">
                        <form  class="form-horizontal" action="SendCustomerId" method="post" id="ForgotCustomerIdForm">
                            <div class="form-group">
                                <div class="col-md-12" align="left"><label class="control-label">Enter SSN</label></div>
                                <div class="col-md-12"><input class="form-control" type="number" name="ssn" id="Acc" /></div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-12" align="center"><button class="btn btn-success" onclick="Forgot_Customer(); return false;"> Fetch Details</button></div>
                            </div>
                        </form>
                        <label>@TempData["ForgotCustomerId"]</label>
                    </div>

                </div>

            </div>
            <div class="col-md-3"></div>
        </div>
        </div>
</body>
</html>
