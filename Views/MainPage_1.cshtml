
@{
    Layout = null;
}

<!DOCTYPE html>

<html >
<head>
    <meta name="viewport" content="width=device-width" />
    <title>The People's Bank</title>
    <script src="~/scripts/MainPage.js"></script>
    <link href="~/Content/reset.css" rel="stylesheet"/>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/mainstyles.css" rel="stylesheet" />
   
    
</head>
<body class="container-fluid" >
    <div class="row row_class">
        <div class="col-md-4"><img style="opacity:0.6" src="~/Images/PeopleBank.jpg" /></div>
        <div class="col-md-7"><h1 style="font-family:'Times New Roman', Times, serif; font-size:500%">The People's Bank</h1></div>
     </div> 
    <br /><br />  
    
    <div class="panel panel-primary" >
        <div class="panel-heading">
            Are you new to our site?</div>
        <div class="panel-body">
            <a href="Instruction"><span class="glyphicon glyphicon-question-sign"></span> Click me for instructions </a>
</div>
    </div>
    <div>
        <ul>
            <li ><a id="CustLink" onclick="Customer_click()" style="background-color:#4CAF50" >Customer</a></li>
            <li ><a id="BankLink" onclick="Banker_click()">Banker</a></li>
            <li style="float:right"><a  id="AboutLink" href="#about">About</a></li>
        </ul>
    </div>
    <div id="CustomerSignIn" style="display:block;background-image:none "  >
        <br /><strong> Welcome to Customer Log In</strong><br /><br />
        <form>
            <div class="form-group">
                <label>CustomerID:</label>
                <input type="text" class="form-control" id="CustomerUsername" placeholder="Enter customerID...">
            </div>
            <div class="form-group">
                <label>Password:</label>
                <input type="password" class="form-control" id="CustomerPassword" placeholder="Enter password...">
            </div>
            <div class="form-group">
            <a><label>Forgot password</label></a>
            </div>
            <button type="submit" class="btn btn-default">Submit</button>
        </form>
    </div>
    <div id="BankerSignIn" style="display:none">
        <br /><strong>Welcome to Banker Log In</strong><br /><br />
        <form>
            <div class="form-group">
                <label>CustomerID:</label>
                <input type="text" class="form-control" id="BankerUsername" placeholder="Enter CustomerID...">
            </div>
            <div class="form-group">
                <label>Password:</label>
                <input type="password" class="form-control" id="BankerPassword" placeholder="Enter password...">
            </div>
            <button type="submit" class="btn btn-default" onclick="Banker_Login()">Submit</button>
        </form>
    </div>

    
    
</body>
</html>
