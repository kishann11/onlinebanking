@using OnlineBanking.Data
@model List<SecurityQuestions>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <script src="~/scripts/FirstTimeLogin.js"></script>
    <link href="~/Content/reset.css" rel="stylesheet" />
    <script src="http://code.jquery.com/jquery-2.2.4.min.js"
            integrity="sha256-BbhdlvQf/xTY9gja0Dq3HiwQF8LaCRTXxZKRutelT44="
            crossorigin="anonymous"></script>
    <link href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css" rel="stylesheet" />
    <script src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <title>First Time Login</title>

</head>
<body class="container-fluid" style="background-color:#f2f2f2; min-width:335px">
    <div class="col-md-12" id="main">
        <div class="col-md-12">
            <nav class="navbar navbar-inverse navbar-fixed-top">
                <div class="container-fluid">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        <a class="navbar-brand" href="#">The People's Bank</a>
                    </div>
                    <div class="collapse navbar-collapse" align="center" id="myNavbar">
                        <ul class="nav navbar-nav navlist">
                            <li><a href="/Homepage/Index">&nbsp;&nbsp;&nbsp;&nbsp;Home&nbsp;&nbsp;&nbsp;&nbsp;</a></li>
                            <li>
                                <a href="/Homepage/Instruction">&nbsp;&nbsp;&nbsp;&nbsp;Instructions&nbsp;&nbsp;&nbsp;&nbsp;</a>

                            </li>
                            

                        </ul>
                        <ul class="nav navbar-nav navbar-right">
                            <li><a href="/HomePage/Logout"><span class="glyphicon glyphicon-log-out"></span>Logout</a></li>
                        </ul>
                    </div>
                </div>
            </nav>
        </div>
        <div class="row page-header col-md-12" style="margin-top:80px">
            <div class="col-md-3 img-responsive" align="center"><a href="Index"><img style="opacity:0.7; width:40%; height:auto;" src="~/Images/PeopleBank.jpg" /></a></div>
            <div class="col-md-6" align="center"><div class="col-md-12"><h5 style="font-family:'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif; width:100%; font-size:4vw;">The People's Bank</h5></div></div>
            <div class="col-md-3"></div>
        </div>
        <div class="col-md-12">
            <div class="col-md-3"></div>
            <div class="col-md-6" style="display:block" id="Security">
                <div class="panel panel-primary" align="center">
                    <div class="panel-heading">
                        <h4>Choose your security questions</h4>
                    </div>
                    <div class="panel-body">
                        <form  class="form-horizontal" method="post" action="UpdateSecurity" id="FirstTimeSubmitForm">

                            <div class="form-group">
                                <div class="col-md-12" align="left"><label class="control-label">Choose security question 1</label></div>
                                <div class="col-md-12">
                                    <select class="form-control" name="qid1">
                                        @{
                                            foreach (var item in Model)
                                            {
                                                <option value="@item.qid">@item.qname</option>
                                            }
                                        }
                                    </select>
                                </div>
                                

                            </div>
                            <div class="form-group">
                                <div class="col-md-12" align="left"><label class="control-label">Enter Answer</label></div>
                                <div class="col-md-12"><input class="form-control" type="text" id="answer1" name="answer1" placeholder="Enter answer" /></div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-12" align="left"><label class="control-label">Enter security question 2</label></div>
                                <div class="col-md-12"><input class="form-control" type="text" id="customques" name="question2" placeholder="Enter question" /></div>
                            </div>
                            
                            <div class="form-group">
                                <div class="col-md-12" align="left"><label class="control-label">Enter Answer</label></div>
                                <div class="col-md-12"><input class="form-control" type="text" id="answer2" name="answer2" placeholder="Enter answer" /></div>
                            </div>

                            

                            <div class="form-group">
                                <div class="col-md-12" align="left"><label class="control-label">New Password:</label></div>
                                <div class="col-md-12"><input class="form-control" type="password" id="pwd1" name="pass1" placeholder="Enter new password"></div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-12" align="left"><label class="control-label">Confirm Password:</label></div>
                                <div class="col-md-12"><input class="form-control" type="password" id="pwd2" name="pass2" placeholder="Confirm new password"></div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-12"><button class="btn btn-success" onclick="First_Submit(); return false;"> Submit</button></div>

                            </div>

                        </form>
                    </div>
                </div>

            </div>
        </div>
        </div>

</body>
</html>
