
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <script src="~/scripts/CustomerRegister.js"></script>
    <link href="~/Content/reset.css" rel="stylesheet" />
    <script src="http://code.jquery.com/jquery-2.2.4.min.js"
            integrity="sha256-BbhdlvQf/xTY9gja0Dq3HiwQF8LaCRTXxZKRutelT44="
            crossorigin="anonymous"></script>
    <link href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css" rel="stylesheet" />
    <script src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <title>Register Customer</title>


</head>
<body class="container-fluid" style="background-color:#f2f2f2; min-width:335px">
    <div class="col-md-12" id="main">
        <div class="col-md-12">
            <nav class="navbar navbar-inverse navbar-fixed-top">
                <div class="container-fluid">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        <a class="navbar-brand" href="#">The People's Bank</a>
                    </div>
                    <div class="collapse navbar-collapse" align="center" id="myNavbar">
                        <ul class="nav navbar-nav navlist">
                            <li><a href="/Banker/Index">&nbsp;&nbsp;&nbsp;&nbsp;Home&nbsp;&nbsp;&nbsp;&nbsp;</a></li>
                            <li>
                                <a href="/Homepage/Instruction">&nbsp;&nbsp;&nbsp;&nbsp;Instructions&nbsp;&nbsp;&nbsp;&nbsp;</a>

                            </li>
                            

                        </ul>
                        <ul class="nav navbar-nav navbar-right">
                            <li><a href="/HomePage/Logout"><span class="glyphicon glyphicon-log-out"></span>Logout</a></li>
                        </ul>
                    </div>
                </div>
            </nav>
        </div>
        <div class="row page-header col-md-12" style="margin-top:80px">
            <div class="col-md-3 img-responsive" align="center"><a href="Index"><img style="opacity:0.7; width:40%; height:auto;" src="~/Images/PeopleBank.jpg" /></a></div>
            <div class="col-md-6" align="center"><div class="col-md-12"><h5 style="font-family:'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif; width:100%; font-size:4vw;">The People's Bank</h5></div></div>
            <div class="col-md-3"></div>
        </div>
        <div class="col-md-3"></div>
        <div class="col-md-6">
            <div class="col-md-12">
                <div class="panel panel-primary" align="center">
                    <div class="panel-heading">
                        Register Customer
                    </div>
                    <div class="panel-body">
                        <label>@ViewData["RegisterMessage"]</label><br />
                        <form class="form-horizontal" method="post" action="Register" id="RegisterForm">
                            <div class="form-group">
                                <div class="col-md-12" align="left"><label class="control-label">Social Security Number</label><br /></div>
                                <div class="col-md-12"><input class="form-control" type="number" name="ssn" placeholder="Enter SSN" id="SSN" /></div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-12" align="left"><label class="control-label">First Name</label><br /></div>
                                <div class="col-md-12"><input class="form-control" type="text" name="firstname" placeholder="Enter First Name" id="Fname" required /></div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-12" align="left"><label class="control-label">Last Name</label><br /></div>
                                <div class="col-md-12"><input class="form-control" type="text" name="lastname" placeholder="Enter Last Name" id="Lname" required /></div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-12" align="left"><label class="control-label">Date of Birth</label><br /></div>
                                <div class="col-md-12"><input class="form-control" type="date" name="dob" onkeydown="return false" placeholder="Enter DOB" required id="date" /></div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-12" align="left"><label class="control-label">Address</label><br /></div>
                                <div class="col-md-12"><input class="form-control" type="text" name="address" placeholder="Enter Address" id="Address" required /></div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-12" align="left"><label class="control-label">Phone Number</label><br /></div>
                                <div class="col-md-12"><input class="form-control" type="number" name="phno" maxlength="10" placeholder="Enter Phonenumber" id="phnumber" required /></div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-12" align="left"><label class="control-label">Email Address</label><br /></div>
                                <div class="col-md-12"><input class="form-control" type="text" name="email" placeholder="Enter Email" id="Email" required /></div>
                            </div>

                            <div class="col-md-12 form-group"><div class="col-md-12"><button class="btn btn-success" onclick="Register_Submit(); return false;"> Register </button></div></div>
                            <br /><br />

                        </form>

                    </div>
                </div>
            </div>

        </div>
        <div class="col-md-3"></div>
    </div>
</body>
</html>
